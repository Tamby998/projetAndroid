<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_view_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/echauffement"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/card_view_image_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Echauffement"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/card_view_image1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/passe"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/card_view_image_title1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Jeu de passe"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/card_view_image2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tir" />

        <TextView
            android:id="@+id/card_view_image_title2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Technique de tir"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/card_view_image3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dribble" />

        <TextView
            android:id="@+id/card_view_image_title3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Dribbles"
            android:textSize="20dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>